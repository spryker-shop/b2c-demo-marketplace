<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\FileUpload\Persistence" package="src.Orm.Zed.FileUpload.Persistence">

    <table name="pyz_file_upload" idMethod="native" allowPkInsert="true">
        <column name="id_file_upload" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_merchant" required="true" type="INTEGER"/>
        <column name="fk_user" required="true" type="INTEGER"/>
        <column name="s3_url" type="VARCHAR" size="255" required="true"/>
        <column name="cdn_url" type="VARCHAR" size="255" required="false"/>
        <column name="original_file_name" type="VARCHAR" size="255" required="true"/>
        <column name="content_type" type="VARCHAR" size="255" required="true"/>
        <column name="size" type="INTEGER" default="0"/>

        <foreign-key name="pyz_file_upload-fk_merchant" foreignTable="spy_merchant">
            <reference local="fk_merchant" foreign="id_merchant"/>
        </foreign-key>
        <foreign-key name="pyz_file_upload-fk_user" foreignTable="spy_user">
            <reference local="fk_user" foreign="id_user"/>
        </foreign-key>

        <index name="pyz_file_upload-original_file_name">
            <index-column name="original_file_name"/>
        </index>

        <behavior name="timestampable">
            <parameter name="disable_updated_at" value="true"/>
        </behavior>

        <id-method-parameter value="id_file_upload_pk_seq"/>
    </table>

</database>
